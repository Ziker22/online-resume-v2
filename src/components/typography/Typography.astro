---
import type { TCommonComponentProps } from '../../types/TTypes';

type Props = {
  variant: 'h1' | 'h2' | 'h3';
} & TCommonComponentProps;

export type TypographyProps = Props;

const { variant, className, ...rest } = Astro.props;
const Element = variant;

const getClassnameForVariant = () => {
  switch (Element) {
    case 'h1':
      return 'text-5xl lg:text-6xl font-bold ';
    case 'h2':
      return 'text-3xl font-semibold';
    case 'h3':
      return 'text-2xl font-semibold';
    default:
      return 'text-2xl font-semibold';
  }
};

const typographyClasses = getClassnameForVariant();
---

<Element class:list={[typographyClasses, className]} {...rest}><slot /></Element>
