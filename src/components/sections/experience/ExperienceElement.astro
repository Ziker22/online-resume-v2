---
import type { TExperience } from '../../../types/TTypes';
import ExperienceElementHeader from './ExperienceElementHeader.astro';
import Typography from '../../typography/Typography.astro';
import { Image } from 'astro:assets';
type Props = {
  data: TExperience;
};

const { data } = Astro.props;
---

<li>
  <ExperienceElementHeader data={data} />
  <div class="relative py-6 lg:px-0">
    <Typography variant="h2" className="mb-8 text-center">{data.title}</Typography>

    <ul class="space-y-6 text-text-secondary">
      {
        data.bulletPoints.map((bulletPoint) => (
          <li class="mb-2 text-base before:left-0 before:top-0 before:mr-4 before:size-4 before:text-text-secondary before:content-['â†’']">
            {bulletPoint}
          </li>
        ))
      }
    </ul>

    <div class="mt-10 flex flex-col gap-4">
      {data.images.map((image) => <Image src={image} alt={data.title} class="h-auto w-full rounded-lg" />)}
    </div>
  </div>
</li>
