---
import externalLink from '../../images/externalLink.svg';
import { Image } from 'astro:assets';
import Badge from './Badge.astro';
import { CONTACT_DATA } from '../../data/indexPageData';
---

<>
  {
    CONTACT_DATA.map(({ link, name }) => {
      return (
        <a class="hover:cursor-pointer" href={link} target="_blank">
          <Badge className="transition-transform hover:scale-105    ">
            <Image src={externalLink} alt="Extrenal link icon" height={20} width={20} class="mr-1" />
            {name}
          </Badge>
        </a>
      );
    })
  }
</>
