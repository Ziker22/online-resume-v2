---
import { Image } from 'astro:assets';
import type { TExperience } from '../../../types/TTypes';
import Badge from '../../badge/Badge.astro';

type Props = {
  data: TExperience;
};

const { data } = Astro.props;
---

<div class="sticky top-0 z-10 bg-background py-2 shadow-xl shadow-background lg:px-0">
  <div class="flex items-center justify-between py-2">
    <a href={data.company.url} target="_blank">
      <div class="flex flex-col gap-2">
        <Image loading="lazy" src={data.company.logo} alt={data.company.name} class="h-8 w-auto" height={32} />
        <p class="text-xl font-semibold">{data.company.name}</p>
      </div>
    </a>
    <div class="flex h-full flex-col items-end">
      <span>
        <Badge>
          {`${data.startDate}-${data.endDate}`}
        </Badge>
      </span>
      <div class="mt-4 text-center text-xs text-text-secondary">
        {data.location}
      </div>
    </div>
  </div>
</div>
