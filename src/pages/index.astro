---
import Layout from '../layouts/Layout.astro';
import IntroSection from '../components/sections/intro/IntroSection.astro';
import ExperienceSection from '../components/sections/experience/ExperienceSection.astro';
import { CORE_SKILLS, EXPERIENCES } from '../data/indexPageData';
import CoreSkillsSection from '../components/sections/coreSkills/CoreSkillsSection.astro';
import SectionWrapper from '../components/sections/SectionWrapper.astro';
import FreelanceProjectsSection from '../components/sections/freelance/FreelanceProjectsSection.astro';
import TestimonialsSection from '../components/sections/testimonials/TestimonialsSection.astro';
import ContactSection from '../components/sections/contact/ContactSection.astro';
---

<Layout title="Juraj Slavíček">
  <main class="size-full">
    <SectionWrapper>
      <IntroSection />
    </SectionWrapper>
    <SectionWrapper>
      <CoreSkillsSection data={CORE_SKILLS} />
    </SectionWrapper>
    <SectionWrapper>
      <ExperienceSection data={EXPERIENCES} />
    </SectionWrapper>
    <SectionWrapper>
      <FreelanceProjectsSection />
    </SectionWrapper>

    <div class="flex flex-col-reverse md:flex-row flex-grow">
      <div class="w-full md:w-1/3">
        <ContactSection />
      </div>
      <div class="w-full md:w-2/3">
        <TestimonialsSection />
      </div>
    </div>
  </main>
</Layout>

