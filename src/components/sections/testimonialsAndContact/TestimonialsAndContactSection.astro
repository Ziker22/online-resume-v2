---
import { IndexPageSectionId } from '../../../data/indexPageData';
import TypographyUnderlined from '../../typography/TypographyUnderlined.astro';
import Contact from './Contact.astro';
import TestimonialsGrid from './TestimonialsGrid.astro';
---

<section class="flex flex-col gap-10 pb-20 pt-8 md:pt-16 lg:pt-24" id={IndexPageSectionId.TESTIMONIALS}>
  <TypographyUnderlined color="primary" variant="h1" className="text-center">Testimonials</TypographyUnderlined>
  <div class="flex h-auto flex-col-reverse bg-backgroundSecondary pb-4 md:flex-row">
    <div class="w-full md:w-1/3">
      <Contact />
    </div>
    <div class="w-full md:w-2/3">
      <TestimonialsGrid />
      <div class="mt-4 text-center">
        <a href="/testimonials" class="text-primary hover:underline">Show all</a>
      </div>
    </div>
  </div>
</section>
